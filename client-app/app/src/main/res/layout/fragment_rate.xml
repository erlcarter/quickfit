<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.RateFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:orientation="vertical">

        <include layout="@layout/rate_title_bar"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- part 1 -->
            <RelativeLayout
                android:id="@+id/rate_part_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.android.erlcarter.android_quickfit_master.view.CircleProgressView
                    android:id="@+id/circleProgressbar"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_centerInParent="true" />
            </RelativeLayout>
            <!-- part 2 -->
            <RelativeLayout
                android:id="@+id/rate_part_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rate_part_1">
                <Button
                    android:id="@+id/btn_host_weight_record"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_centerHorizontal="true"
                    android:text="记录体重"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_below="@+id/btn_host_weight_record"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="计划每周减重"/>
                    <TextView
                        android:id="@+id/tv_weight_record_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.00"/>
                    <TextView
                        android:id="@+id/tv_weight_record_unit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="公斤"/>
                </LinearLayout>
            </RelativeLayout>
            <!-- part 3 -->
            <!--开始减重-->
            <LinearLayout
                android:id="@+id/rate_part_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_below="@+id/rate_part_2"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/ll_object_weight_update"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_weight_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorConfigBlack"
                            android:textSize="22sp"
                            android:textFontWeight="bold"
                            android:text="00.0"/>
                        <TextView
                            android:id="@+id/tv_weight_unit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorConfigBlack"
                            android:text="公斤"/>
                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="开始减重"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="初始体重"/>
                    <TextView
                        android:id="@+id/tv_weight_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="1900年1月1日"/>
                </RelativeLayout>
            </LinearLayout>
            <!--最新体重-->
            <LinearLayout
                android:id="@+id/rate_part_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_below="@+id/rate_part_3"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_now_weight_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorConfigBlack"
                            android:textSize="22sp"
                            android:textFontWeight="bold"
                            android:text="00.0"/>
                        <TextView
                            android:id="@+id/tv_now_weight_unit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorConfigBlack"
                            android:text="公斤"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/tv_now_weight_date_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="减重第0天"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="最新体重"/>
                    <TextView
                        android:id="@+id/tv_now_weight_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="1900年1月1日"/>
                </RelativeLayout>
            </LinearLayout>
            <!--目标减重-->
            <LinearLayout
                android:id="@+id/rate_part_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:background="@color/colorBlueLight"
                android:layout_below="@+id/rate_part_4"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_target_weight_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/holo_blue_dark"
                            android:textSize="22sp"
                            android:textFontWeight="bold"
                            android:text="00.0"/>
                        <TextView
                            android:id="@+id/tv_target_weight_unit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/holo_blue_dark"
                            android:text="公斤"/>
                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textColor="@android:color/holo_blue_dark"
                        android:text="目标日期"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/holo_blue_dark"
                        android:text="目标体重"/>
                    <TextView
                        android:id="@+id/tv_target_weight_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textColor="@android:color/holo_blue_dark"
                        android:text="1900年1月1日"/>
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:layout_below="@+id/rate_part_5"
                android:layout_marginTop="20dp">
                <Button
                    android:id="@+id/btn_set_new_object"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:background="#f8f8f8"
                    android:layout_alignParentLeft="true"
                    android:text="设定新目标"/>
            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>
</FrameLayout>