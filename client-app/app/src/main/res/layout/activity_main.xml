<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".activity.MainActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/colorWhite"
        android:orientation="vertical">
        <!--顶  栏-->
        <include android:id="@+id/main_topbar"
            layout="@layout/host_title_bar"/>
        <!--中  间-->
        <FrameLayout
            android:id="@+id/fl_main_body"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_main_bottombar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/mainbottombar"
        android:orientation="horizontal">
        <!--底  栏-->
        <RelativeLayout
            android:id="@+id/bottombar_host_btn"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_main_bottombar_text_host"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="3dp"
                android:gravity="center"
                android:singleLine="true"
                android:text="首页"
                android:textColor="@color/colorBlue"
                android:textSize="12sp" />
            <ImageView
                android:id="@+id/iv_main_bottombar_image_host"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_above="@+id/tv_main_bottombar_text_host"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="3dp"
                android:src="@drawable/quickfit_main_host_selected" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/bottombar_commuity_btn"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_main_bottombar_text_commuity"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="3dp"
                android:gravity="center"
                android:singleLine="true"
                android:text="社区"
                android:textColor="@color/colorBlack5"
                android:textSize="12sp" />
            <ImageView
                android:id="@+id/iv_main_bottombar_image_commuity"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_above="@+id/tv_main_bottombar_text_commuity"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="3dp"
                android:src="@drawable/quickfit_main_commuity" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/bottombar_extend_btn"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            >
            <ImageView
                android:id="@+id/iv_main_bottombar_image_extend"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:layout_marginTop="3dp"
                android:src="@drawable/quickfit_main_extend" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/bottombar_shop_btn"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_main_bottombar_text_shop"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="3dp"
                android:gravity="center"
                android:singleLine="true"
                android:text="商店"
                android:textColor="@color/colorBlack5"
                android:textSize="12sp" />
            <ImageView
                android:id="@+id/iv_main_bottombar_image_shop"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_above="@+id/tv_main_bottombar_text_shop"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="3dp"
                android:src="@drawable/quickfit_main_shop" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/bottombar_userinfo_btn"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_main_bottombar_text_userinfo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="3dp"
                android:gravity="center"
                android:singleLine="true"
                android:text="我的"
                android:textColor="@color/colorBlack5"
                android:textSize="12sp" />
            <ImageView
                android:id="@+id/iv_main_bottombar_image_userinfo"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_above="@+id/tv_main_bottombar_text_userinfo"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="3dp"
                android:src="@drawable/quickfit_main_userinfo" />
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>